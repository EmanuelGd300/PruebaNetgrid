# App Configuration
APP_NAME="Pokemon API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_LOCALE=es
APP_FALLBACK_LOCALE=es

# Database (MySQL - Configurado para Docker)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=pokemon_favorites
DB_USERNAME=pokemon_user
DB_PASSWORD=password

# CORS - Dominios permitidos para el frontend
SANCTUM_STATEFUL_DOMAINS=localhost:3000,127.0.0.1:3000

# reCAPTCHA (Opcional)
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# Mail (Opcional)
MAIL_MAILER=log
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@pokemon-app.com"
MAIL_FROM_NAME="${APP_NAME}"

# Session
SESSION_DRIVER=database
SESSION_LIFETIME=120
